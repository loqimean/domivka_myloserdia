<div class="w-full min-h-screen">
  <div class="flex items-center justify-between mb-5">
    <h1 class="text-4xl font-bold">Партнери</h1>
    <%= link_to 'Створити', new_account_partner_path, class: "btn-secondary" %>
  </div>

  <div class="flex flex-col">
    <div>
      <div class="inline-block min-w-full align-middle">
        <div class="border-b border-gray-200 shadow sm:rounded-lg">
          <% if @partners.present? %>
            <table class="w-full table-element">
              <thead>
                <tr>
                  <th scope="col">Логотип</th>
                  <th scope="col">Веб-адреса</th>
                  <th scope="col" class="tracking-wider"></th>
                  <th scope="col" class="tracking-wider"></th>
                </tr>
              </thead>
              <tbody>
                <% @partners.each do |partner| %>
                  <tr>
                    <td>
                      <%= image_tag partner.logo.url, width: 100 %>
                    </td>
                    <td class="text-blue-600">
                      <%= link_to partner.web_site_url.truncate(150), partner.web_site_url %>
                    </td>
                    <td class="text-sm font-medium text-right text-blue-600">
                      <%= link_to 'Редагувати', [:edit, :account, partner] %>
                    </td>
                    <td class="p-auto">
                      <%= button_to [:account, partner], method: :delete, remote: true, form_class: 'w-fit m-auto' do %>
                        <%= image_tag 'icons/recyclebin.svg', width: '25px' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="col-md-12 tp-pagination">
              <%= paginate @partners %>
            </div>
          <% else %>
            <div class="p-5 text-center">
              <p>На даний момент партнери не добавлені</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
