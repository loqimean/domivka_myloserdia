<div class="swiper swiper-container" data-controller="carousel" data-carousel-options-value='{"autoplay": {"delay": 2500, "disableOnInteraction": false},"navigation": {"nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev"}, "loop": true, "slidesPerView": 1, "breakpoints": { "767": { "slidesPerView": 3 } }}'>
  <div class="swiper-wrapper">
    <% @situation_photos.each do |photo| %>
      <div class="swiper-slide">
        <%= image_tag photo.photo.url %>
      </div>
    <% end %>
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>
